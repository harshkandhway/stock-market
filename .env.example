# Stock Analyzer Pro Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=8563335475:AAEVxgaQp9KNPLqr636ofEJMRWpCaXELewQ

# Your Telegram user IDs (comma-separated)
# Get your ID from @userinfobot on Telegram
TELEGRAM_ADMIN_IDS=746097421

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/bot.db

# =============================================================================
# BOT SETTINGS
# =============================================================================
BOT_NAME=Stock Analyzer Pro Bot
BOT_VERSION=1.0.0
ENVIRONMENT=development

# =============================================================================
# RATE LIMITING
# =============================================================================
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_HOUR=50

# =============================================================================
# ALERT SYSTEM
# =============================================================================
# Check interval in seconds (300 = 5 minutes)
ALERT_CHECK_INTERVAL=300

# Maximum alerts per user
MAX_ALERTS_PER_USER=20

# Cooldown between same alert triggers (in minutes)
ALERT_COOLDOWN_MINUTES=60

# =============================================================================
# CACHE SETTINGS
# =============================================================================
# Cache expiry in minutes
CACHE_EXPIRY_MINUTES=15
ENABLE_ANALYSIS_CACHE=true

# =============================================================================
# LOGGING
# =============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# =============================================================================
# TIMEZONE
# =============================================================================
# Default timezone for scheduled reports
DEFAULT_TIMEZONE=Asia/Kolkata
